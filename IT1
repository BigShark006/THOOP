import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        while (sc.hasNextInt()) {
            int n = sc.nextInt();

            if (n <= 1) {
                System.out.println(0);
            } else {
                System.out.println((int)Math.pow(2, n - 2));
            }
        }

        sc.close();
    }
}